<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Reset your password</h4>
      </div>
      <div class="modal-body">
        <%= flash_messages %>
        <%= form_for :password, url: self.send("#{AwesomeAccess.configuration.passwords_controller.to_s.singularize}_path"), method: :put, html: {class: 'form-horizontal'} do |form| %>
        <%= hidden_field_tag 'email', @person.email %>
        <%= hidden_field_tag 'password_token', @person.password_token %>
          <div class="form-group">
            <div class="col-lg-12">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input class="form-control" id="password" name="password" placeholder="New Password" size="30" type="password" value="" />
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-12">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input class="form-control" id="password_confirmation" name="password_confirmation" placeholder="New Password Again" size="30" type="password" value="" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class=" col-lg-12">
              <button type="submit" class="btn btn-primary pull-right">Reset Password</button>
            </div>
          </div>
        <% end %>
      </div><!-- /.modal-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dalog -->

<script type="text/javascript">
  $(function() {
    $('.modal').modal({
      backdrop: 'static'
    });
  });
</script>
