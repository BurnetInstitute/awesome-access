<script type="text/javascript">
  $(function() {
    $('.modal').modal();
  });
</script>

<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Sign in</h4>
      </div>
      <div class="modal-body">
        <%= flash_messages %>
        <%= form_for :session, url: session_path, html: {class: "form-horizontal"} do |form| %>
        <div class="container">
          <div class="row">
            <div class="input-group">
              <span class="input-group-addon glyphicon glyphicon-envelope"></span>
              <input id="email" name="email" placeholder="Email" size="30" type="email" value="" />
            </div>
          </div>
          <div class="row">
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
              <input id="password" name="password" placeholder="Password" size="30" type="password" value="" />
            </div>
          </div>
          <div class="row">
            <%= link_to 'Forgot your password?', :root %>
            <button type="submit" class="btn btn-primary pull-right">Sign in</button>
          </div>
        </div>
        <% end %>
      </div><!-- /.modal-body -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dalog -->
